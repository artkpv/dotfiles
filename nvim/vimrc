" wiki.vim --------------------------------------------------- {{{1

let g:wiki_root = '~/mydir/notes/'

let g:wiki_filetypes = ['md']

let g:wiki_link_creation = {
      \ 'md': {
      \   'link_type': 'md',
      \   'url_extension': '.md',
      \   'url_transform': { x -> WikiMapTextToLink(x) }
      \ },
      \ 'org': {
      \   'link_type': 'org',
      \   'url_extension': '.org',
      \ },
      \ 'adoc': {
      \   'link_type': 'adoc_xref_bracket',
      \   'url_extension': '',
      \ },
      \ '_': {
      \   'link_type': 'md',
      \   'url_extension': '.md',
      \ },
      \}

let g:wiki_link_default_schemes = {
      \ 'wiki': { 'wiki': 'wiki', 'adoc': 'adoc' },
      \ 'md': 'wiki',
      \ 'md_fig': 'file',
      \ 'org': 'wiki',
      \ 'adoc_xref_inline': 'adoc',
      \ 'adoc_xref_bracket': 'adoc',
      \ 'adoc_link': 'file',
      \ 'ref_shortcut': '',
      \ 'ref_definition': '',
      \ 'date': 'journal',
      \ 'cite': 'zot',
      \}


function! WikiMapTextToLink(text) abort
    if a:text =~ '\v.*\.(md|wiki|txt)$'
        return substitute(a:text,'\v\.(md|wiki|txt)', '', 'g')
    else
        let url = substitute(tolower(a:text), '\v[ \t;:.*?\)\(]+', '_', 'g')
        if expand('%') =~ '\v\/0\/|^\/?0\/'
            let url = strftime('%Y%m%d%H%M') . '_' .  url
        else
            let url = strftime('%Y-%m-%d-%H-%M') . '_' . url
        endif
        return url
    endif
endfunction

let g:wiki_month_names = [ '01.–Ø–Ω–≤–∞—Ä—å', '02.–§–µ–≤—Ä–∞–ª—å', '03.–ú–∞—Ä—Ç', '04.–ê–ø—Ä–µ–ª—å', '05.–ú–∞–π', '06.–ò—é–Ω—å', '07.–ò—é–ª—å', '08.–ê–≤–≥—É—Å—Ç', '09.–°–µ–Ω—Ç—è–±—Ä—å', '10.–û–∫—Ç—è–±—Ä—å', '11.–ù–æ—è–±—Ä—å', '12.–î–µ–∫–∞–±—Ä—å' ]

